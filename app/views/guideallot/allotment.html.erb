<h1>Guide allotment portal</h1>
<br><br>
<table class="table"><th>group id</th><th>student 1</th><th>student 2</th><th>enter guide id</th>
<tbody>	<% @groups.each do |group| %>
		<%if group.id%2 ==0%>
		<%else%>
		<tr><td>
		<%= group.group_id %></td>
		<td> <%= group.user_roll %></td>
		<td> <%= group.friend_roll %></td>
		<td> <%= form_for group, method: :put do |f| %>
			<%= f.text_field :guide %>
			<%= f.submit 'assign guide', :class => 'button-xs' %>
			</td><%end%>
		</tr><%end%>
		
		
		
	 <% end %>
	</tbody></table>

